@model UI.Models.Register.RegisterModel
@{
    ViewBag.Title = "Register";
}

<head>
    <script>
        $(document).ready(function () {
            $("h5").click(function () {
                $(this).hide();
            });
        });
    </script>
</head>

<body>
    <div class="jumbotron">
        <h2>注册</h2>
        <p>
            @using (Html.BeginForm())
            {
                <label>用户名：</label><br />
                //@Html.LabelFor(m => m.UserName)<br />
                @Html.TextBoxFor(m => m.UserName)<br />
                //<input type="text" name="UserName" /><br />
                @Html.ValidationMessageFor(m => m.UserName)<br />

                //<label>密码：</label><br />
                //<input type="password" /><br />

                <label>密码：</label><br />
                //<input type="password" @Html.TextBoxFor(m => m.PassWord) />
                @Html.PasswordFor(m => m.PassWord)<br />
                @Html.ValidationMessageFor(m => m.PassWord)<br />
                <div>
                    <label>@Html.RadioButtonFor(m => m.IsMale, true)男</label>
                    <label>@Html.RadioButtonFor(m => m.IsMale, false)女</label>
                </div>
                <div>
                    <label>来自：</label>@Html.EnumDropDownListFor(m => m.InCity)
                </div>
                <div>
                    <label>介绍：</label>@Html.TextAreaFor(m => m.SelfIntroduction)
                </div>
                <div>
                    <label>@Html.CheckBoxFor(m => m.RememberMe)记住我</label>


                    <label><input type="checkbox" name="Remember" value="true" />记住你</label><br />
                    <input type="submit" value="提交" />

                </div>
                //<button type="submit">提交</button>
                //<style="width:40px"></style="width:40px"> 设置尺寸的
            }
        </p>
        <h5>如果你点我，我就会消失。</h5>
        <h5>继续点我!</h5>
        <h5>接着点我!</h5>
    </div>
</body>